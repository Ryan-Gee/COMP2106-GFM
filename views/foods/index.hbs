<h1>All Foods</h1>

<a href="/foods/add">Add a new food</a>

<table class="table table-striped table-hover">
    <thead>
        <th>Name</th>
        <th>Country</th>
        <th></th>
    </thead>
    <tbody>
        {{#each foods}}
            <tr>
                <td><a href="foods/edit/{{this._id}}">{{this.name}}</a></td>
                <td>{{this.country}}</td>
                <td><a href="foods/delete/{{this._id}}" class="text-danger" onclick="return confirmDelete()">Delete</a></td>
            </tr>
        {{/each}}
    </tbody>
</table>