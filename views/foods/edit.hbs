<h1>Edit food "{{food.name}}"</h1>

<form method="post">
    <fieldset>
        <label for="name" class="col-sm-2">Name:*</label>
        <input type="text" name="name" id="name" required value="{{food.name}}"/>
    </fieldset>
    <fieldset>
        <label for="country" class="col-sm-2">Country:*</label>
        <input type="text" name="country" id="country" required value="{{food.country}}"/>
    </fieldset>

    <button class="btn btn-info offset-sm-2">Update</button>
</form>
